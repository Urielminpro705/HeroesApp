<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/translucent_white_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="29dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hero_card_img"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/ironman"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/hero_card_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="IRON MAN"
            android:background="@color/white"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/teko_variablefont_wght"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>